#include<stdio.h>

double e1(int x, int n)
{
  // iteration
  double s = 1;
  doulbe nom = 1;
  double dem = 1;
  
  for(int i = 1; i < n; ++i) {
    nom *=  x;
    dem *=n;
    s += nom/dem;
  }
  return s;
}

double e2(int x, int n)
{
  static doulbe s = 1;
  if (n==0) return s;
 
  s = 1 + s * x/n;
  return e2(x, n-1);
}

int main() {
 double r;
 r = e(2,10);
 printf("%f\n", r);
 return 0;
}
