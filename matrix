#include<iostream>
#include<stdio.h>
#include<stdlib.h>
using namespace std;
void Set(struct Matrix *m, int i , int j, int x)
{
  if ( i == j ) m->A[i] = x;
  return;
}
int Get(struct Matrix m, int i, int j ) 
{
  if ( i == j ) return m.A[i-1];
  else return 0;
}
struct Matrix {
  int A[10];
  int n;
}
void Display(struct Matrix m) 
{
  int i, j;
  for ( i = 0; i < m.n; i++) {
    for (j= 0; j < m.n; j++) {
      if ( i == j ) 
        printf("%d ", m.A[i]);
      else
        printf("0 "
     }
     printf("\n");
   }
 }
int main() {
   struct Matrix m;
   m.n = 4;
   Set(&m, 1, 1, 5);
   Set(&m, 2, 2, 8);
   Set(&m, 3, 3, 9);
   Set($m, 4, 4,12);
   Display(m);
   return 0;
 }
 class Matrix {
 private:
   int A[10];
   int n;
 public:
   void Set(int i, int j, int x);
   int  Get(int i, int j);
   void Display();
 };
 
 template<T>
 class Matrix<T> {
 private:
   T * A;
   int n;
 public:
   Matrix(int n);
   ~Matrix() {
     delete []A;
   }
   void Set(int i, int j, T x);
   T Get (int i, int j);
   void Display();
 };
 template<T>
 void Matrix<T>::Matrix(int i)
 {
   n = i;
   A = new T[i];
 }
 template<T>
 void Matrix<T>::Set(int i, int j, T x)
 {
   if ( i > n ) return;
   if ( i == j ) A[i-1] = x;
 }
 template<T>
 T Matrix<T>::Get(int i, int j)
 {
   if ( i == j ) return A[i-1];
   else return 0;
 }
 template<T>
 void Matrix<T>::Display()
 {
   int i , j ;
   for ( i = 0; i < n; i++) {
     for ( j = 0; j < n; j ++) {
       if ( i == j ) {
         cout << A[i-1] << " ";
       } else {
         cout << "0 ";
       }
     }
     cout << endl;
   }
 }

class LTM {
private:
  int *A;
  int *n;
public:
  LTM() {
    n = 10;
    A = new int[n*(n+1)/2];
 }
 LTM(int n) {
   this->n = n;
   A = new int[n*(n+1)/2];
 }
 ~LTM() {
   delete []A;
 }
 void set(int i, int j, int x, bool rawMajor = true);
 int get(int i, int j, bool rawMajor = true);
 void Display(bool rawMajor = true);
 int getDimension() { return n; }
}

void Matrix::set(int i, int j, int x)
{
  if ( i >= j ) {
    if ( rowMajor) {
      A[i(i-1)/2 + j -1] = x;
    } else {
      A[n * (j-1 ) - (j-1)(j-2)/2 + i - j] = x;
    }
  }
}
int Matrix::get(int i, int j, bool rowMajor)
{
   if ( i > j) {
     if ( rowMajor) {
       return A[i * ( i-1)/2 + j -1];
     } else {
       return A[ n * j - (j-1)*(j-2)/2 + i -j];
     }
   } else {
     return 0;
   }
 }
 
 void Matrix::Display(bool rowMajor)
 {
   int i, j;
   for ( i = 0; i < n; i++) {
     for ( j = 0; j < n; j++) {
       if ( i >= j ) {
         if ( rowMajor) {
           cout << A[i * (i-1)/2 + j -1] << " " ;
         } else {
           cout << A[n * (j-1) - (j-1) * (j-2)/2 + i -j];
         }
       } else {
         cout << "0 ";
       }
     }
     cout << endl;
   }
 }
 
 class UTM
 {
 private:
   int *A;
   int n;
   bool rowMajor= true;
 public:
   UTM() { 
     n = 10;
     A = new int[n*(n+1)/2];
   }
   UTM() (int n) : rowMajor(true)
   {
     this->n = n;
     A = new int[n*(n+1)/2];
   }
 
   ~UTM() { delete []A; }
   void set(int i, int j, int x);
   int get(int i, int j);
   void Display();
 }
 
 void UTM::set(int i, int j, int x) 
 {
   if ( i <= j ) {
     if (rowMajor) {
       A[n * (i-1) - (i-1)*(i-2)/2 + j -i] = x;
     } else {
       A[j * ( j-1) /2 + j - i] = x;
     }
   }
 }
 int get(int i, int j) 
 {
   if ( i <= j ) {
     if (rowMajor) {
       return A[n*(i-1) - (i-1)*(i-2)/2 + j -i];
     else {
       return A[j*(j-1)/2 + i -1];
     }
   } else {
     return 0;
   }
 }
